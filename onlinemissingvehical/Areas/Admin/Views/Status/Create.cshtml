@model onlinemissingvehical.Models.StatusUpdate

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Status Update</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <!-- Display missing vehicle details -->
                    <div class="mb-3">
                        <label class="fw-bold" hidden>Missing Vehicle ID:</label>
                        <span hidden>@Model.MissingVehicle.Id</span>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Vehicle Type:</label>
                        <span>@Model.MissingVehicle.VehicleType</span>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Model:</label>
                        <span>@Model.MissingVehicle.Model</span>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Color:</label>
                        <span>@Model.MissingVehicle.Color</span>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">License Plate Number:</label>
                        <span>@Model.MissingVehicle.LicensePlateNumber</span>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Last Known Location:</label>
                        <span>@Model.MissingVehicle.LastKnownLocation</span>
                    </div>
                    <div class="mb-2 d-flex justify-content-center align-items-center">
                        @if (!string.IsNullOrEmpty(Model.MissingVehicle.ImageUrl))
                        {
                            <img src="@Url.Content(Model.MissingVehicle.ImageUrl)" alt="Image" style="max-width: 50%; height: auto;" />
                        }
                        else
                        {
                            <span>NA</span>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Comment:</label>
                        <span>@Model.MissingVehicle.Comment</span>
                    </div>
                    <!-- Status selection -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="MissingVehicleId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="fw-bold">Status:</label>
                            <select asp-for="Status" class="form-select">
                                <option value="">Select Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Processing">Processing</option>
                                <option value="Recovered">Recovered</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <!-- Save and Back buttons -->
                        <div class="mb-3 text-center">
                            <!-- Center-align the button group -->
                            <div class="row justify-content-center">
                                <!-- Center-align the buttons -->
                                <div class="col-md-auto">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                                <div class="col-md-auto">
                                    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
